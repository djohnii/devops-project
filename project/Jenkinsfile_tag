pipeline {
    agent {
        label "agent-1"
    } 
    environment {
        registry = "alwx1753/devops-project"
        registryCredential = 'dockerhub'
        dockerImage = ''
        // taglatest = sh(script: 'git describe $(git rev-parse @) --tags --abbrev=0', returnStdout: true).trim()
        // penultimate = sh(script: 'git describe $(git rev-parse @~~) --tags --abbrev=0', returnStdout: true).trim()
    }
    stages {
        stage('Checkout Source') {
            steps {
                git branch: 'main', url: 'git@github.com:djohnii/devops-project.git'
            }
        }
        stage('Checkout tag') {
            steps{
                script {
                    sh 'git fetch'
                    gitTag=sh(returnStdout:  true, script: "git tag --sort=-creatordate | head -n 1").trim()
                    echo "gitTag output: ${gitTag}"
                }
            }
        }
    }
}
