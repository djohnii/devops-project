pipeline {
    agent {
        label "agent-1"
    } 
    environment {
        registry = "alwx1753/devops-project"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    stages {
        stage('Checkout Source') {
            steps {
                git branch: 'main', url: 'git@github.com:djohnii/devops-project.git'
            }
        }
        stage('Checkout tag') {
            steps{
                script {
                    sh 'git fetch'
                    gitTag=sh(returnStdout:  true, script: "git tag --sort=-creatordate | head -n 1").trim()
                    echo "gitTag output: ${gitTag}"
                    dir('project/docker'){
                    sh "pwd"
                    sh "ls -la"
                        sh "docker build ${registry}:${gitTag}" .
                       // dockerImage = docker.build registry + ":${gitTag}"
                    }
                }
            }
        }    
        stage('Push docker image'){
            steps{
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push("${gitTag}")
                    }
                }
            }
        }
    }
}









